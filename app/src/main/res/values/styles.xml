<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="fontFamily">@font/avenir_medium</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="MyToolbarIconTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_extra_micro</item>
    </style>


    <style name="progressActivity">
        <item name="emptyBackgroundColor">@color/white</item>
        <item name="emptyTitleTextColor">@color/grey_500</item>
        <item name="emptyContentTextColor">@color/grey_500</item>

        <item name="errorBackgroundColor">@color/white</item>
        <item name="errorButtonBackgroundColor">@color/transparent</item>
        <item name="errorButtonTextColor">@color/colorAccent</item>
        <item name="errorContentTextColor">@color/grey_500</item>
        <item name="errorTitleTextColor">@color/grey_500</item>

        <item name="loadingBackgroundColor">@color/white</item>

    </style>

</resources>
